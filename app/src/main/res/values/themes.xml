<resources>
    <style name="Theme.Pwfb" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSplashScreenBackground">@color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_black</item>
    </style>
    
    <style name="style_title_text">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/c_d6b54a</item>
    </style>

    <style name="style_function_layout">
        <item name="background">@color/c_242323</item>
    </style>
    
    <style name="style_function_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/c_949292</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>
</resources>